# 開發環境變數設定檔
# 請在生產環境中使用實際的安全值

# 基本設定
PROJECT_NAME=NASA Hackathon API
PROJECT_DESCRIPTION=NASA 黑客松 FastAPI 應用程式
VERSION=0.1.0
DEBUG=true

# 伺服器設定
HOST=0.0.0.0
PORT=8000

# API 設定
API_V1_STR=/api/v1

# 安全設定
SECRET_KEY=your-very-secret-key-change-this-in-production-please-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 資料庫設定 (請根據實際情況修改)
DATABASE_URL=postgresql://nasa_user:nasa_password@localhost:5432/nasa_hackathon
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis 設定
REDIS_URL=redis://localhost:6379/0

# 日誌設定
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 檔案上傳設定
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# 郵件設定 (選填)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=

# NASA API 設定
NASA_API_KEY=DEMO_KEY
NASA_API_BASE_URL=https://api.nasa.gov

# 監控設定
ENABLE_METRICS=true
METRICS_PORT=9090

# 允許的主機 (開發環境)
ALLOWED_HOSTS=["*"]